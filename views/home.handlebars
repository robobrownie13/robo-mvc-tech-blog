{{#each blogpost as |blogpost|}}
  <div class='row mb-4 project'>
    <div class='col-md-5'>
      <h2>
        <a href='/project/{{id}}'>{{title}}</a>
      </h2>
      <p>
        <span class='comment'>{{comment}}</span>
        needed!
      </p>
      <p>Created by
        {{user_id}}
        on
        {{format_date date_created}}</p>
    </div>
    <div class='col-md-7'>
      <p>
        {{body}}
      </p>
    </div>
  </div>
{{/each}}