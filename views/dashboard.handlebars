<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Create a New Blogpost:</h3>

    <form class='form new-blogpost-form'>
      <div class='form-group'>
        <label for='blogpost-title'>Title:</label>
        <input
          class='form-input'
          type='text'
          id='blogpost-title'
          name='blogpost-title'
        />
      </div>
      <div class='form-group'>
        <label for='blogpost-body'>Body:</label>
        <textarea
          class='form-input'
          id='blogpost-body'
          name='blogpost-body'
        ></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Create</button>
      </div>
    </form>
  </div>

  {{#if blogposts.length}}
    <div class='col-md-6 blogpost-list'>
      <h3>Current Projects:</h3>

      {{#each blogposts as |blogpost|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4>{{title}}</h4>
          </div>
          <div class='col-md-7'>
            <p>
              {{body}}
            </p>
          </div>
          <div class='col-md-4'>
            <button
              class='btn btn-sm btn-danger delete-button'
              data-id='{{id}}'
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src='./js/dashboard.js'></script>